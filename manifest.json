{

    "manifest_version": 2,
    "name": "testrun",
    "version": "0.0.1",
    "description": "Extension for running mocha tests against a web app.",
    "icons": {

        "48": "icons/testrun.svg"

    },
    "permissions": [

        "activeTab",
        "<all_urls>"

    ],
    "browser_action": {

        "default_icon": "icons/testrun.svg",
        "default_title": "Testrun"

    },
    "background": {

        "scripts": ["lib/scripts/background/extension.js"]

    },
    "web_accessible_resources": [

        "public/*",
        "lib/scripts/page/*"

    ]

}
